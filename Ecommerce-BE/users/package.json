    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
        "start": "nest start",
        "user": "cross-env NODE_ENV=user nest start users --watch",
        "product": "cross-env NODE_ENV=product nest start products --watch",
        "order": "cross-env NODE_ENV=order nest start orders --watch",
        "store": "cross-env NODE_ENV=store nest start store --watch",
        "socket": "cross-env NODE_ENV=socket nest start socket --watch",
        "dev": "nest start --watch",
        "debug": "nest start --debug --watch",
        "pro:user": "cross-env NODE_ENV=user node dist/apps/users/main",
        "pro:product": "cross-env NODE_ENV=product node dist/apps/products/main",
        "pro:order": "cross-env NODE_ENV=order node dist/apps/orders/main",
        "pro:store": "cross-env NODE_ENV=store node dist/apps/store/main",
        "pro:socket": "cross-env NODE_ENV=socket node dist/apps/socket/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./apps/users/test/jest-e2e.json",
        "user:pull": "yarn prisma db pull --schema=./prisma/user.prisma",
        "product:pull": "yarn prisma db pull --schema=./prisma/product.prisma",
        "order:pull": "yarn prisma db pull --schema=./prisma/order.prisma",
        "store:pull": "yarn prisma db pull --schema=./prisma/store.prisma",
        "user:generate": "yarn prisma generate --schema=./prisma/user.prisma",
        "product:generate": "yarn prisma generate --schema=./prisma/product.prisma",
        "order:generate": "yarn prisma generate --schema=./prisma/order.prisma",
        "store:generate": "yarn prisma generate --schema=./prisma/store.prisma",
        "generate:all": "yarn user:generate && yarn product:generate && yarn order:generate && yarn store:generate"
    },
